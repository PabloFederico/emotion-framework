{
  "manifest_version": 2,

  "name": "Facebook Scrapper",
  "description": "Esta extensi√≥n es producto del laboratorio de sistemas inteligentes de la FIUBA",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "html/popup.html"
  },
   "content_scripts": [
      {
        "matches": ["https://www.facebook.com/*", "http://www.facebook.com/*"],
        "js": ["js/lib/external/jquery-2.1.4.min.js", "js/messageStorage.js", "js/content.js", "js/lib/klf.js"],
        "run_at": "document_end"
      }
    ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "web_accessible_resources": [
    "img/*",
    "js/*",
    "html/*"
  ]
}
